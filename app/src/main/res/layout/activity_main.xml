<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.view.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:showDividers="middle"
        android:divider="@drawable/liner_layout_line_height">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="GridView + Picasso + ScrollView置顶"
            android:gravity="center"
            android:clickable="true"
            android:onClick="startGridView"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="仿照饿了么下单按钮"
            android:gravity="center"
            android:clickable="true"
            android:onClick="startShoppingView"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:weightSum="2"
        android:showDividers="middle"
        android:divider="@drawable/liner_layout_line_height">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ConvenientBanner 图片轮播器"
            android:gravity="center"
            android:clickable="true"
            android:onClick="startConvenientBanner"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="万能adapter"
            android:gravity="center"
            android:clickable="true"
            android:onClick="startUniversalAdapter"/>

    </LinearLayout>

</LinearLayout>
