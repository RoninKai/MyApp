<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:showDividers="middle"
    android:divider="@drawable/liner_layout_line_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:divider="@drawable/liner_layout_line_width">

        <TextView
            android:id="@+id/tv_number_1"
            android:text="1"
            style="@style/number_keyboard"/>

        <TextView
            android:id="@+id/tv_number_2"
            android:text="2"
            style="@style/number_keyboard"/>

        <TextView
            android:id="@+id/tv_number_3"
            android:text="3"
            style="@style/number_keyboard"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:divider="@drawable/liner_layout_line_width">

        <TextView
            android:id="@+id/tv_number_4"
            android:text="4"
            style="@style/number_keyboard"/>

        <TextView
            android:id="@+id/tv_number_5"
            android:text="5"
            style="@style/number_keyboard"/>

        <TextView
            android:id="@+id/tv_number_6"
            android:text="6"
            style="@style/number_keyboard"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:divider="@drawable/liner_layout_line_width">

        <TextView
            android:id="@+id/tv_number_7"
            android:text="7"
            style="@style/number_keyboard"/>

        <TextView
            android:id="@+id/tv_number_8"
            android:text="8"
            style="@style/number_keyboard"/>

        <TextView
            android:id="@+id/tv_number_9"
            android:text="9"
            style="@style/number_keyboard"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:divider="@drawable/liner_layout_line_width">

        <ImageView
            android:id="@+id/iv_delect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/keyboard_number_color"
            android:src="@mipmap/delect"/>

        <TextView
            android:id="@+id/tv_number_0"
            android:text="0"
            style="@style/number_keyboard"/>

        <TextView
            android:id="@+id/tv_number_ok"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:background="@drawable/keyboard_ok_color"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="完成"/>

    </LinearLayout>

</LinearLayout>