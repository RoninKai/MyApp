<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhou.anew.com.newapp.mvp.view.universalAdapter.ui.Main5Activity">

    <include android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/title_layout" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_pager"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:tabIndicatorColor="@color/blue_l"
        app:tabSelectedTextColor="@color/blue_l"
        app:tabTextColor="@color/black"
        android:layout_height="wrap_content" />

    <zhou.anew.com.newapp.mvp.view.myView.MyViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:id="@+id/vp_pager" />

</LinearLayout>
